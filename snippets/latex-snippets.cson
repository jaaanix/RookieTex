# LaTeX Snippets for PlainText (Backslashes have to be escaped with 4 Backslashes)
'.text.plain':
  'TeX Table':
    'prefix': 'textable'
    'body': """
      \\\\begin{tabular}${1:{ | c | c | }}
        \\\\hline
        ${2:col1} & ${3:col2} \\\\\
        ${4:row1} & ${5:row1} \\\\\
        ${6:row2} & ${7:row2} \\\\\
        \\\\hline
      \\\\end{tabular}
    """
  'TeX Unordered List':
    'prefix': 'texlist'
    'body': """
      \\\\begin{itemize}
        \\\\${1:item}
        \\\\${2:item}
      \\\\end{itemize}
    """
  'TeX Section':
    'prefix': 'texsec'
    'body': '\\\\section{${1:name}}'
  'TeX SubSection':
    'prefix': 'texsubsec'
    'body': '\\\\subsection{${1:name}}'
  'TeX Start Document':
    'prefix': 'texdocclass'
    'body': '\\\\documentclass[${1:options}]{${2:class}}'
  'TeX Image':
    'prefix': 'teximg'
    'body': '\\\\includegraphics[${1:options}]{${2:imagePath}}'
  'TeX Maths Inline Mode':
    'prefix': 'texmathinline'
    'body': '$ ${1:expression} $'
  'TeX Math Display Mode':
    'prefix': 'texmathdisplay'
    'body': '$$ ${1:expression} $$'
  'TeX Package':
    'prefix': 'taxpaying'
    'body': '\\\\usepackage{${1:package name}}
